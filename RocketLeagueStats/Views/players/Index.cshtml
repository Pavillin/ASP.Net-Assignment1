@model IEnumerable<RocketLeagueStats.Models.player>

@{
    ViewBag.Title = "Player Stats";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Player Stats</h2>

<p>
    @Html.ActionLink("Add New Player", "Create")
</p>
<table class="table table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.team.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.goals)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.assists)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.saves)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.shots)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.team.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.goals)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.assists)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.saves)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.shots)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.playerid }) |
            @Html.ActionLink("Details", "Details", new { id=item.playerid }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.playerid })
        </td>
    </tr>
}

</table>
